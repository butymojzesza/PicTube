<BorderPane prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.prz.UserWindowController">
   <center>
      <Pane fx:id="pictureView" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
         <children>
            <ImageView fitHeight="480.0" fitWidth="640.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/user_background.jpg" />
               </image>
            </ImageView>
             <Label fx:id="loggedAs" alignment="CENTER_RIGHT" layoutX="14.0" layoutY="28.0" text="%zalogowanyjako" textAlignment="RIGHT" />
             <Button fx:id="backButton" layoutX="14.0" layoutY="418.0" mnemonicParsing="false" onAction="#goBack" text="%wyloguj">
               <graphic>
                  <ImageView fitHeight="22.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/glyphicons/png/glyphicons-21-home.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
             <Label fx:id="userNameLabel" layoutX="116.0" layoutY="28.0" text="user name">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
            <TextField id="findHashtagText" fx:id="hashtagTextField" layoutX="347.0" layoutY="25.0" prefHeight="25.0" prefWidth="92.0" />
            <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" layoutX="234.0" layoutY="28.0" text="%jakiego_hasztaga_szukasz" textAlignment="RIGHT" />
            <Button fx:id="searchButton" layoutX="483.0" layoutY="22.0" mnemonicParsing="false" onAction="#searchHashtag" text="%szukaj">
               <graphic>
                  <ImageView fitHeight="22.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/glyphicons/png/glyphicons-28-search.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <ScrollPane fx:id="scrollPaneForHashtagSearch" fitToHeight="true" fitToWidth="true" layoutX="60.0" layoutY="90.0" prefHeight="300.0" prefWidth="508.0" visible="false">
               <content>
                  <GridPane fx:id="gpSearchPicture" alignment="TOP_CENTER" hgap="10.0" vgap="10.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </GridPane>
               </content>
            </ScrollPane>
            <ScrollPane fx:id="scrollPaneForAllPictures" fitToWidth="true" hbarPolicy="NEVER" layoutX="60.0" layoutY="90.0" prefHeight="300.0" prefWidth="508.0">
               <content>
                  <TilePane fx:id="tile" hgap="15.0">
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </TilePane>
               </content>
            </ScrollPane>
         </children>
         <effect>
            <InnerShadow color="#2238c3" />
         </effect>
      </Pane>
   </center>
</BorderPane>
